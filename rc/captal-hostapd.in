#!/bin/sh
#
# @RCDIR@/captal-hostapd: roque AP configuration
#

PATH="/sbin:/usr/sbin:/bin:/usr/bin"

NAME="captal-hostapd"
USER="root"
RUNDIR="/run/$NAME"
PID="/run/$NAME.pid"
CONF="@ETCDIR@/captal/hostapd.conf"
PROG="/usr/sbin/hostapd"
OPTS="-B -P $PID $CONF"

case $1 in
start)
	install -d -m 755 -o $USER $RUNDIR || exit 1
	start-stop-daemon --start --pidfile $PID --exec $PROG -- $OPTS
	;;
stop)
	start-stop-daemon --stop --pidfile $PID --remove-pidfile \
		--retry 60
	;;
restart)
	$0 stop
	$0 start
	;;
status)
	start-stop-daemon --status --pidfile $PID
	case $? in
	0) echo "$PROG running with pid: $(cat $PID)" ;;
	1) echo "$PROG not running, stale pidfile: $PID" ;;
	3) echo "$PROG not running" ;;
	4) echo "Unable to determine program status" ;;
	esac
	;;
*)
	echo "usage: $0 [start|stop|restart|status]"
	;;
esac

